# Stage Environment Configuration Example
# Copy this file to terraform.tfvars and customize for your deployment

# Environment identifier - automatically used for resource naming
environment = "stage"

# Azure Kubernetes Service (AKS) Configuration
resource_group_location = "eastus"      # Azure region for resource deployment
node_count = 2                          # Number of worker nodes in the cluster
vm_size = "Standard_B2s"                # Azure VM size for cluster nodes

# GitOps Repository Configuration
# Repository containing your application manifests and configurations
git_repo_url = "https://github.com/unixfg/kubernetes.git"

# Two-Stage Deployment Configuration
# Set to false for initial deployment, then true to enable ApplicationSets
enable_applicationsets = false
